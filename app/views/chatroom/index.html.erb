<h4 class="ui center aligned medium icon header">
    <i class="circular orange coffee icon"></i>
    Say Something
</h4>

<%= turbo_stream_from :messages_list %>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="chat">
                <div class="ui feed">
                    <%= turbo_frame_tag "chatroom" do %>
                        <%= render 'chats' %>
                    <% end %>
                </div>
            </div>
                <div class="extra content">
                    <%= form_for(:message, class: "ui reply form", url: message_path, method: :post) do |f| %>
                        <div class="field">
                            <div class="ui fluid icon input">
                                <%= f.text_field :body, placeholder: "Enter a message..." %>
                                <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe, data: { turbo_frame: "chatroom" } %>
                            </div>
                        </div>
                    <% end %>
                </div>
        </div>
    </div>


    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
