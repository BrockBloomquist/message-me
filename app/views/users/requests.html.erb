<h4 class="ui center aligned medium icon header">
    <i class="circular orange user icon"></i> Friend Requests
</h4>

<div class="ui cards centered align">
    <% @requests.each do |r| %>
        <div class="card">
            <div class="content">
                <div class="header">
                    <%= current_user.username %>
                </div>
                <div class="meta">
                    Friends of Veronika
                </div>
                <div class="description">
                    Elliot requested permission to view your contact details
                </div>
            </div>
            <div class="extra content">
                <div class="ui two buttons">
                    <div class="ui inverted green button">Approve</div>
                    <div class="ui inverted red button">Decline</div>
                </div>
            </div>
        </div>
    <% end %>
</div>
